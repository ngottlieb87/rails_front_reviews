<div class = "header">
  <h1>Rick and Morty Quotes</h1>
</div>

<div class="card blue-grey darken-1">
  <div class="card-content white-text">
    <span class="card-title">Random Quote by <%= @random['author']%></span>
    <p>Location: <%= @random['destination']%></p>
    <p>Quote: "<%= @random['content']%>"</p>
    <p>Quote by: <%= @random['author']%></p>
  </div>
</div>
<hr>
<div class="card blue-grey darken-1">
  <div class="card-content white-text">
    <span class="card-title">All Quotes</span>
    <% @reviews.each do |review| %>
    <hr>
    <p>Location: <%= link_to review['destination'],review_path(review['id']) %></p>
    <p>Quote: "<%= link_to review['content'], review_path(review['id']) %>"</p>
    <p>Quote by: <%= link_to review['author'], review_path(review['id']) %></p>
    <% end %>
  </div>
</div>
<hr>
