<div class = "header">
  <h1>Rick and Morty Quotes</h1>
</div>
</h1><%= link_to "Add a new quote", new_review_path(@review)%></h1>
<div class="card blue-grey darken-1">
  <div class="card-content white-text">
    <span class="card-title">Random Quote by <%= @random['author']%></span>
    <p>Destination: <%= @random['destination']%></p>
    <p>Quote: "<%= @random['content']%>"</p>
    <p>Quote by: <%= @random['author']%></p>
  </div>
</div>
<hr>
<div class="card blue-grey darken-1">
  <div class="card-content white-text">
    <span class="card-title">All Quotes</span>
    <% @reviews.each do |review| %>
    <hr>
    <p>Destination: <%= review['destination'] %></p>
    <p>Quote: "<%= review['content'] %>"</p>
    <p>Quote by: <%= review['author'] %></p>
    <% end %>
  </div>
</div>
<hr>
